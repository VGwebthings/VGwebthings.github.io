---
layout: nil
---
[
  {% for post in site.snippets %}
  {
    "content": {{ post.content | strip_html | strip_newlines | jsonify }},
    "date": "{{ post.date }}",
    "description" : "{{ post.description | escape }}",
    "tags": "{{ post.tags | join: ', ' }}",
    "title": "{{ post.title | escape }}",
    "url": "{{ site.url }}{{ post.url }}"
  }
  {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
